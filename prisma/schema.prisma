generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Paste {
  id         String   @id @default(uuid())
  content    String
  ttlSeconds Int?
  maxViews   Int?
  views      Int      @default(0)
  createdAt  DateTime @default(now())
}
